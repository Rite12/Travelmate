<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Destination3"
        android:layout_width="187dp"
        android:layout_height="116dp"
        android:layout_below="@+id/Destination1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:shapeAppearanceOverlay="@style/roundedimage"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="16dp"
        android:layout_toStartOf="@+id/Destination4"
        android:scaleType="centerCrop"
        android:src="@drawable/curug_bidadari" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Destination1"
        android:layout_width="175dp"
        android:layout_height="114dp"
        android:layout_below="@id/btnview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="15dp"
        app:shapeAppearanceOverlay="@style/roundedimage"
        android:layout_marginRight="16dp"
        android:layout_toStartOf="@+id/Destination2"
        android:scaleType="centerCrop"
        android:src="@drawable/puncak_pass" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Destination2"
        android:layout_width="175dp"
        android:layout_height="114dp"
        android:layout_below="@id/btnview"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:shapeAppearanceOverlay="@style/roundedimage"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kebun_raya" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Destination4"
        android:layout_width="175dp"
        android:layout_height="114dp"
        android:layout_below="@id/Destination2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:shapeAppearanceOverlay="@style/roundedimage"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/taman_safari" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Destination5"
        android:layout_width="170dp"
        android:layout_height="114dp"
        android:layout_below="@+id/Destination3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:shapeAppearanceOverlay="@style/roundedimage"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="16dp"
        android:layout_toStartOf="@+id/Destination6"
        android:scaleType="centerCrop"
        android:src="@drawable/geopark_ciletuh" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Destination6"
        android:layout_width="171dp"
        android:layout_height="114dp"
        android:layout_below="@+id/Destination4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:shapeAppearanceOverlay="@style/roundedimage"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gunung_padang" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Destination7"
        android:layout_width="171dp"
        android:layout_height="114dp"
        android:layout_below="@+id/Destination6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:shapeAppearanceOverlay="@style/roundedimage"
        android:scaleType="centerCrop"
        android:src="@drawable/cimory_dairyland" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="171dp"
        android:layout_height="114dp"
        android:layout_below="@+id/Destination5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        app:shapeAppearanceOverlay="@style/roundedimage"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/Destination7"
        android:src="@drawable/kampung_budaya" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        app:subtitleTextColor="@color/black"
        app:title="Destination">



        <ImageView
            android:id="@+id/ic_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingStart="15dp"
            android:src="@drawable/ic_map"
            app:tint="@color/Icon"/>
        <ImageView
            android:id="@+id/ic_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingStart="15dp"
            android:src="@drawable/heart"
            app:tint="@color/Icon" />
        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_search"
            app:tint="@color/Icon" />





    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/btnview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/wisata_alam"
            android:background="@drawable/rounded"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:backgroundTint="@color/lightGray"
            android:textColor="@color/black"
            android:padding="5dp"
            android:paddingRight="15dp"
            android:text="Semua"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/wisata_alam"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/wisata_sejarah"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/lightGray"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="5dp"
            android:text="Wisata Alam"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@id/wisata_sejarah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/wisata_kuliner"
            android:background="@drawable/rounded"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="5dp"
            android:backgroundTint="@color/lightGray"
            android:clickable="true"
            android:text="Wisata Sejarah"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/wisata_kuliner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="5dp"
            android:clickable="true"
            android:backgroundTint="@color/lightGray"
            android:paddingRight="15dp"
            android:text="Wisata Kuliner"
            android:textSize="10dp" />

    </RelativeLayout>

</RelativeLayout>
